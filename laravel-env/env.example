# Add/Copy these variables into .env file

# Laravel App
LOG_CHANNEL=daily

# @see https://stackoverflow.com/questions/73710554/laravel-scout-meilisearch-with-docker
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=masterKey
SCOUT_DRIVER=meilisearch

DEBUGBAR_ENABLED=false

# Docker Environment Variables

# I. Service Ports
WEB_PORT=8080
PHP_PORT=9000
MYSQL_PORT=3306
NODE_PORT=3000
REDIS_PORT=6379
MAILHOG_DASHBOARD_PORT=8025
MEILISEARCH_PORT=7700

# II. APACHE
WEB_DOCUMENT_ROOT=/var/www/html/public/
WEB_SERVER_NAME=localhost
WEB_SERVER_ALIAS=localhost

# III. MySQL / Maria DB
MYSQL_DATABASE="${DB_DATABASE}"
MYSQL_USER="${DB_USERNAME}"
MYSQL_PASSWORD="${DB_PASSWORD}"
MYSQL_ROOT_PASSWORD=root

# IV. PHP
PHP_DATE_TIMEZONE=UTC
PHP_ERROR_REPORTING=E_ALL

# Xdebug v2
# PHP_XDEBUG_DEFAULT_ENABLE=1
# PHP_XDEBUG_REMOTE_AUTOSTART=1
# PHP_XDEBUG_REMOTE_HOST=127.0.0.1
# PHP_XDEBUG_REMOTE_PORT=9001
# PHP_XDEBUG_REMOTE_ENABLE=1
# PHP_XDEBUG_IDE_KEY=DOCKER_XDEBUG
# PHP_XDEBUG_PROFILER_ENABLE=1
# PHP_XDEBUG_PROFILER_OUTPUT_DIR=/usr/local/php/logs

# Xdebug v3
# https://stackoverflow.com/questions/64776338/xdebug-3-the-setting-xdebug-remote-has-been-renamed-see-the-upgrading-g
PHP_XDEBUG_MODE=develop,debug
PHP_XDEBUG_CLIENT_HOST=host.docker.internal
PHP_XDEBUG_CLIENT_PORT=9001
PHP_XDEBUG_START_WITH_REQUEST=yes
PHP_XDEBUG_IDE_KEY=DOCKER_XDEBUG